#!/bin/bash

repo="$(git config remote.origin.url)"
anglerUrl="$(git config angler.url)"

res="$(curl -s --data "$1 $2 $3" "$anglerUrl?hook=checkout&repo=$repo")"

IFS=$'\n' respArgs=($res)

exitcode=${respArgs[0]}

for echoline in "${respArgs[@]:1}"
do
    echo "remote: $echoline"
done

exit $exitcode
