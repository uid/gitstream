{
  "include": [
    "src/**/*.ts"                         // Includes all TS files in the src directory for compilation
  ],

  "compilerOptions": {
    "strict": true,                     // Reduces the strictness of type-checking, making the initial transition less error-prone
    "noImplicitAny": false,
    "rootDir": "src",
    "outDir": "dist",                  // Specifies the directory for the compiled JS output, aligning with our build process

    // the rest are from praxistutor
    "target": "esnext",
    "module": "nodenext",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": false
  }
}
